    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway:200">
    <link rel="stylesheet" type="text/css" href="../../css/main.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">

    <title>To the polls!</title>
  </head>
  <body>

    <div class="header">
      <div class="menu">

        <!-- Menu -->
        <ul class="nav-container">
          <a href="/">
            <li class="nav-item" id="logo"><img src="unbiased_logo.png"></li>
          </a>
          <a href="/">
            <li class="nav-item" id="home">Home</li>
          </a>
          <a href="elections.html">
            <li class="nav-item" id="elections">Elections</li>
          </a>
          <a href="debate.html">
            <li class="nav-item" id="debate">Debate</li>
          </a>
          <a href="/representatives">
            <li class="nav-item" id="representatives">Representatives</li>
          </a>

          <!-- Right Portion of the Menu -->
          <ul class="right-menu">

            <li class="menu-buttons">
              <button class="debate-button">Create a Debate</button>
            </li>

            <li class="menu-buttons">
              <i class="material-icons" id="favorite">favorite</i>
            </li>

            <li class="menu-buttons">
              <div class="profile"></div>
            </li>

          </ul>

        </ul>



      </div>
    </div>

    <!--- Main Content Container -->
    <div class="main-container">

    	<!--- Top Content Container -->
    	<div class="top-content">
    		<div class="info-card-container">
    			<div class="info-card">
    				<div class="profileImg"></div>
    				<div class="contact-info">
    					<p>This is his contact info</p>
    					<button id="searchButton">Contact</button>
    				</div>
    			</div>
    		</div>
    		<div class="main-content">
    			<div class="information">
    				<h2 class="titleRep">{{office}}</h2>
    				<h1 class="name">{{name}}</h1>
    				<p class="description">Description about this person</p>


    				<div class="news">
    					<h2 class>News About this Person:</h2>
    					<button id="refreshFeed">Show news about this person</button>
    					<div class="news-content">
    						<ul id="articles"></ul>
    					</div>

    				</div>
    			</div>


    			</div>

    			<div class="action-buttons">
    				<button class="petitionButton">Start a Petition</button>
    				<button class="debateButton">Start a Debate</button>
    			</div>



    	</div>


    </div>

    <div class="comment-container">
    	<h2>Comments/Debate Topics About This Person:</h2>

        <div class="input" id="chatsend">
     		<input type="textbox" id="chatbox" value=""><br>
      		<p class="send">Send</p>
    	</div>

    	<div id="chatContainer">
     </div>

    </div>

    <script type="text/javascript" src="https://js.pusher.com/3.2/pusher.min.js"></script>

  </body>


